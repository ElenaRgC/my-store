{
  "services": [
    {
      "name": "languagetool",
      "image": "meyay/languagetool:latest",
      "isMain": true,
      "internalPort": 8081,
      "environment": {
        "download_ngrams_for_langs": "en",
        "JAVA_XMS": "256m",
        "JAVA_XMX": "1536m"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/ngrams",
          "containerPath": "/ngrams"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/fasttext",
          "containerPath": "/fasttext"
        }
      ]
    }
  ],
  "schemaVersion": 2
}