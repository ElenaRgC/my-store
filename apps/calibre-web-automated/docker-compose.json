{
  "services": [
    {
      "name": "calibre-web-automated",
      "image": "crocodilestick/calibre-web-automated:latest",
      "isMain": true,
      "internalPort": 8083,
      "environment": [
        {
          "key": "PUID",
          "value": "1000"
        },
        {
          "key": "PGID",
          "value": "1000"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "NETWORK_SHARE_MODE",
          "value": "false"
        },
        {
          "key": "HARDCOVER_TOKEN",
          "value": "your_hardcover_api_key_here"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/ingest",
          "containerPath": "/cwa-book-ingest"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/calibre-library",
          "containerPath": "/calibre-library"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/plugins",
          "containerPath": "/config/.config/calibre/plugins"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
